<h1>Listing posts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= link_to 'Show', post %> | </td>
    <td>
  <% if can? :update, post %>  
    <%= link_to "Edit", edit_post_path(post) %> |  
  <% end %>  
   </td>
   <td>
  <% if can? :destroy, post %>  
    <%= link_to "Destroy", post, :method => :delete, :confirm => "Are you sure?" %> |  
  <% end %>  
   </td>
 </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
